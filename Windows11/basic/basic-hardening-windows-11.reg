;;; Fix - Display driver nvlddmkm stopped responding
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Control\GraphicsDrivers]
; <deleted> = Off (Default)
; 0000000a = 10 seconds
; 00000014 = 20 seconds
"TdrDelay"=dword:00000014

;;;; Fix - Volume Shadow Copy Service error: Unexpected error querying for the IVssWriterCallback interface
[HKEY_LOCAL_MACHINE\SYSTEM\CurrentControlSet\Services\VSS\VssAccessControl]
; default present
"NT Authority\\NetworkService"=dword:00000001
; add in addtion to default (normaly non-existent)
".\\Administrator"=dword:00000001
"NT Authority\\SYSTEM"=dword:00000001
